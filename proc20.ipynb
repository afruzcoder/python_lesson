    "import math\n",
    "\n",
    "def TriagleP(a,h):\n",
    "    b = math.sqrt((a/2)**2 + h**2)\n",
    "    return (b,a+2*b)\n",
    "\n",
    "for i in range(1,4):\n",
    "    print(i)\n",
    "    a = int(input(\"a: \"))\n",
    "    h = int(input(\"h: \"))\n",
    "    print(i, \"- result:\", TriagleP(a,h))"
